map{
  width: 100%;
}

.userlist{
  width: 100%;
  height: 200rpx;
  padding: 10rpx 0;
  background-color: rgba(0, 0, 0, 0.4);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.userlist text{
  color: white;
}
.scroll{
  width: 100%;
  white-space: nowrap;
  display: flex;
  margin: 20rpx 0;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.img{
  width: 96rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.scroll-view_H{
  white-space: nowrap;
}
.scroll-view-item_H{
  display: inline-block;
}