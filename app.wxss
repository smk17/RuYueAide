/**app.wxss**/
Page{
  background-color: #EFEFEF;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: column;
  justify-content: space-between;
  box-sizing: border-box;
} 

.item_container{
  width: 100%;
  min-height: 64rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.graySpace{
  width: 100%;
  background: #f9f9f9;
  min-height: 2rpx;
}

.tap{
  opacity: 1; 
}

.tap:active{
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7; 
}

.widget__arrow{
  width: 32rpx;
  height: 32rpx;
  margin-right: 44rpx;
}
#toast{  
	position: fixed;  
	top: 0;  
	left: 0;  
	width: 90%;
	background-color: red;  
	padding: 20rpx 5%;  
	text-align:center;  
	opacity: 0.7; 
  color: white;
	transition: opacity 0.5s ease-out;  
}
#feedback{
  background-color: #2982D2;
  position: fixed;  
	bottom: 0;  
	right: 0;
  margin-bottom: 150rpx;
  margin-right: 36rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius:50%;
  transition: opacity 0.5s ease-out;  
  display: flex;
  justify-content: center;
  align-items: center;
}
#feedback:active{
  opacity: 0.7;  
}
button{
  margin-top: 100rpx;
  width: 80%;
}